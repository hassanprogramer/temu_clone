<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f2"
    tools:context=".You">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:drawableStart="@drawable/ic_message"
        android:text="  Messages"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:drawableEnd="@drawable/ic_forward"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:textStyle="bold"
        android:textSize="15dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:text="  Your orders"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_forward"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:drawableStart="@drawable/note"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:text="  Your reviews"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_forward"
        android:paddingStart="8dp"
        android:drawableStart="@drawable/reviews"
        android:paddingEnd="16dp"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:text="  Coupon and offers"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_forward"
        android:paddingStart="8dp"
        android:drawableStart="@drawable/coupon"
        android:paddingEnd="16dp"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:text="  Credit balance"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_forward"
        android:paddingStart="8dp"
        android:drawableStart="@drawable/wallet"
        android:paddingEnd="16dp"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:text="  Addresses"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_forward"
        android:paddingStart="8dp"
        android:drawableStart="@drawable/location"
        android:paddingEnd="16dp"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:text="  Customer support"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_forward"
        android:paddingStart="8dp"
        android:drawableStart="@drawable/headset_mic"
        android:paddingEnd="16dp"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:text="  Settings"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_forward"
        android:paddingStart="8dp"
        android:drawableStart="@drawable/settings"
        android:paddingEnd="16dp"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:textSize="15dp"/>




</LinearLayout>